<apex:page standardController="Lead" extensions="MKP002.Photo_Extension" showHeader="false" >
	<apex:slds />
	<style>
		.btn {
			font-weight: bold;
	    font-size: .9em;
		}
	</style>
	<apex:form id="theForm">
		<article class="slds-card">
			<div class="slds-card__header slds-grid">
				<header class="slds-media slds-media_center slds-has-flexi-truncate">
					<div class="slds-media__figure">
						<img src="data:image/png;base64," alt="Photo Uploader Logo" />
					</div>
					<div class="slds-media__body">
						<h2 class="slds-card__header-title">
							<a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Accounts">
								<span>Photo Uploader</span>
							</a>
						</h2>
					</div>
					<div class="slds-no-flex">
						<apex:commandButton value="Save" 
																action="{!saveAttachment}" 
																rendered="{!Lead.MKP002__Photo_Id__c == null}" 
																style="font-weight: bold; font-size: .9em;" />
						<apex:commandButton value="Delete" 
																action="{!deleteImage}" 
																rendered="{!Lead.MKP002__Photo_Id__c != null}" 
																style="font-weight: bold; font-size: .9em;" />
					</div>
				</header>
			</div>
			<div class="slds-card__body slds-card__body_inner" style="text-align: center;">
				<apex:inputFile value="{!abody}" filename="{!aname}" rendered="{!Lead.MKP002__Photo_Id__c == null}" />
				<apex:image id="theImage" value="{!imageURL}" rendered="{!Lead.MKP002__Photo_Id__c != null}" width="100" height="100" />
			</div>
			<footer class="slds-card__footer">
				Made with <span style="color: #e25555;">&hearts;</span> by
				<a href="https://www.mkpartners.com" target="_blank"> MK Partners, Inc.</a>
			</footer>
		</article>
	</apex:form>
	<apex:outputField value="{!Lead.MKP002__Photo_Id__c}" rendered="false" />
</apex:page>